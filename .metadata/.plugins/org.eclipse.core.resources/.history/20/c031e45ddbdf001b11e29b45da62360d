package chapter05;

public class Calendar {
	private int day;
	private int month;
	private int year;

	public int getDay() {
		return day;
	}

	public void setDay(int day) {
		if (month == 2) {
			if (day < 1 || day > 28) {
				System.out.println("날짜 오류입니다.");
			} else {
				this.day = day;
			}
		}
		switch (month) {
		case 1: case 3: case 5: case 7: case 8: case 10: case 12:
			if(day<1||day>31) {
				System.out.println("날짜 오류입니다.");	
				break;
		}
			else {
				this.day = day;
				break;
			}
		case 4: case 6: case 9: case 11:
			if(day<1||day>30) {
				System.out.println("날짜 오류입니다.");	
				break;
		}
			else {
				this.day = day;
				break;
			}
		default :
			this.day = day;
		
		}
	}

	public int getMonth() {
		return month;
	}

	public void setMonth(int month) {
		this.month = month;
	}

	public int getYear() {
		return year;
	}

	public void setYear(int year) {
		this.year = year;
	}

}
